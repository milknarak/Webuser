@{
    ViewData["Title"] = "Userdata";
}

    <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
            <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
            <span class="fs-4">Simple is the best</span>
        </a>

        <ul class="nav nav-pills">
            <li class="nav-item"><a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Userdata">Home</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Useradd">Add</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Useredit">Edit</a></li>
        </ul>
    </header>

    <div class="container">
        <div class="row">
            <div class="col">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" aria-describedby="button-addon2">
                    <button class="btn btn-outline-secondary" type="button" id="button-addon2">search</button>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-7">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">id</th>
                                <th scope="col">Name</th>
                                <th scope="col">Lastname</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <!--data here-->
                            <tr id="Showuserdata">
                                <td scope="row" id="ShowId"></td>
                                <td scope="row" id="ShowName"></td>
                                <td scope="row" id="ShowLastname"></td>
                                <td scope="row"><button type="button" class="btn btn-danger" id="Deleteuserdata">Delete</button></td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <a class="btn btn-success" role="button" asp-controller="Home" asp-action="Useradd">Add</a>
                    <a class="btn btn-warning" role="button" asp-controller="Home" asp-action="Useredit">Edit</a>
                </div>
            </div>
        </div>
    </div>

<script>
    $.ajax("http://localhost:5151/api/userdata").done((data) => {
        const rowTableTemplate = `
        <tr>
            <td>%Id%</td>
            <td>%Name%</td>
            <td>%Lastname%</td>
        </tr>
        `;
        const rows = [];
        for (const item of data) {
            let doc$ = rowTableTemplate;
            doc$ = doc$.replace('%Id%', item.id);
            doc$ = doc$.replace('%Name%', item.name);
            doc$ = doc$.replace('%Lastname%', item.lastname);
            rows.push(doc$)
        }
        $('tbody').html(rows.join(''))
    });
</script>